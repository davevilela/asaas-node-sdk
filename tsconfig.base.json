{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "lib": ["es2017", "dom"],
    "moduleResolution": "node",
    "baseUrl": "./src",
    "types": ["bun-types"],
    "removeComments": true
  },
  "exclude": ["node_modules", "dist", "lib", "**/__tests__/**"]
}
